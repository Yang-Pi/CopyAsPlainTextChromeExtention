{
  "manifest_version": 3,
  "name": "Plane Text",
  "description": "Copy text from a webpage as plain strings",
  "version": "1.0.2",
  
  "background": {
    "service_worker": "./src/background.js"
  },

  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],

  "icons": {
      "16": "icons/plane-16.png",
      "64": "icons/plane-64.png",
      "128": "icons/plane-128.png"
  }
}
